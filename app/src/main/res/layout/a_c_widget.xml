<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="240dp"
    android:layout_height="160dp"
    android:layout_margin="@dimen/unit_5"
    android:background="@drawable/widget_bg"
    android:elevation="@dimen/unit_2"
    android:padding="@dimen/unit_8"
    tools:ignore="MissingPrefix">

    <RelativeLayout
        android:id="@+id/ac_temp_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/tv_temperature_value"
            fontPath="@string/font_montserrat_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:text="24"
            android:textColor="@color/device_controls_header_text_color_enabled"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/ac_controls_temp_unit_text"
            fontPath="@string/font_montserrat_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tv_temperature_value"
            android:enabled="false"
            android:gravity="center"
            android:paddingBottom="@dimen/unit_10"
            android:text="\u2103"
            android:textColor="@color/ac_generic_text_enabled_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/ac_controls_alt_temp_label"
            fontPath="@string/font_montserrat_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tv_temperature_value"
            android:enabled="false"
            android:gravity="center|start"
            android:text="@string/ac_control_evaporator_clean_label"
            android:textColor="@color/device_controls_header_text_color_enabled"
            android:textSize="@dimen/ac_controls_alt_temp_text_size"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_circular_widget"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:clickable="true">

        <ImageView
            android:id="@+id/iv_outer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/ac_outer" />

        <ImageView
            android:id="@+id/iv_knob_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/unit_18"
            android:background="@drawable/acwidget_selector"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/ll_mode_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/knob_status_icn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/knob_value_tv"
                fontPath="@string/font_montserrat_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/unit_2"
                android:gravity="center_horizontal"
                android:text=""
                android:textColor="@color/primary_text_color"
                android:textSize="@dimen/ac_mode_text_size" />
        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/btnPower"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/unit_8"
        android:background="@drawable/button_background"
        android:text="Off"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

    <!-- Commented Switch remains unchanged -->

</RelativeLayout>