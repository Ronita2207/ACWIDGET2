    android:layout_margin="@dimen/unit_8"
    android:background="@drawable/widget_bg"
    android:elevation="@dimen/unit_2"
    android:padding="@dimen/unit_10"
    tools:ignore="MissingPrefix">

    <RelativeLayout
        android:id="@+id/ac_temp_container"
        android:layout_width="@dimen/ac_temp_container_width"
        android:layout_height="wrap_content"
        android:layout_centerVertical="false">

        <TextView
            android:id="@+id/tv_temperature_value"
            fontPath="@string/font_montserrat_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:text="24"
            android:textColor="@color/device_controls_header_text_color_enabled"
            android:textSize="@dimen/text_26" />

        <!--        <com.robinhood.ticker.TickerView-->
