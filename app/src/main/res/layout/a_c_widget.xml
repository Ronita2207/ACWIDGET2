        <TextView
            android:id="@+id/ac_controls_temp_unit_text"
            fontPath="@string/font_montserrat_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tv_temperature_value"
            android:enabled="false"
            android:gravity="center"
            android:paddingBottom="@dimen/unit_15"
            android:text="\u2103"
            android:textColor="@color/ac_generic_text_enabled_color"
            android:textSize="@dimen/unit_18" />

        <TextView
            android:id="@+id/ac_controls_alt_temp_label"
            fontPath="@string/font_montserrat_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tv_temperature_value"
            android:enabled="false"
            android:gravity="center|start"
            android:text="@string/ac_control_evaporator_clean_label"
            android:textColor="@color/device_controls_header_text_color_enabled"
            android:textSize="@dimen/ac_controls_alt_temp_text_size"
            android:visibility="gone" />
    </RelativeLayout>

