<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_enabled="false">
    <layer-list>
      <item android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp">
        <shape android:dither="true" android:shape="oval" android:useLevel="false" android:visible="true">
          <solid android:color="@color/device_control_switch_disable_thumb" />
          <size android:width="19dp" android:height="19dp" />
        </shape>
      </item>
    </layer-list>
  </item>
  <item android:state_checked="true">
    <layer-list>
      <item android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp">
        <shape android:shape="oval">
          <gradient android:angle="270" android:endColor="@color/device_control_switch_thumb_on_border_end" android:startColor="@color/device_control_switch_thumb_on_border_start" />
          <size android:width="19dp" android:height="19dp" />
        </shape>
      </item>
      <item android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp">
        <shape android:shape="oval">
          <gradient android:angle="270" android:centerColor="@color/device_control_switch_thumb_on_center" android:endColor="@color/device_control_switch_thumb_on_end" android:startColor="@color/device_control_switch_thumb_on_start" />
          <size android:width="17dp" android:height="17dp" />
          <stroke android:width="1dp" android:color="@color/fi_info_text_color" />
        </shape>
      </item>
    </layer-list>
  </item>

  <item android:state_checked="false">
    <layer-list>
            <item android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp">
                <shape android:dither="true" android:shape="oval" android:useLevel="false" android:visible="true">
                    <solid android:color="@color/device_control_switch_off_thumb" />
                    <size android:width="19dp" android:height="19dp" />
                    <stroke android:width="1dp" android:color="@color/device_control_switch_off_thumb_border" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>